<project xmlns="http://maven.apache.org/DECORATION/1.6.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.6.0 http://maven.apache.org/xsd/decoration-1.6.0.xsd"
        name="Sortpom Maven Plugin ">
    <version position="right"/>
    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.1</version>
    </skin>
    <custom>
        <fluidoSkin>
            <gitHub>
                <projectId>ekryd/sortpom</projectId>
                <ribbonOrientation>right</ribbonOrientation>
            </gitHub>
            <googlePlusOne/>
            <googleSearch>
                <sitesearch/>
            </googleSearch>
            <!--<skipGenerationDate>true</skipGenerationDate>-->
            <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
        </fluidoSkin>
    </custom>
    <body>
        <menu inherit="top">
            <item name="Wiki" href="https://github.com/Ekryd/sortpom/wiki"/>
            <item name="Source" href="https://github.com/Ekryd/sortpom"/>
            <item name="News" href="https://github.com/Ekryd/sortpom#news"/>
            <item name="Issues" href="https://github.com/Ekryd/sortpom/issues"/>
        </menu>
    </body>
</project>